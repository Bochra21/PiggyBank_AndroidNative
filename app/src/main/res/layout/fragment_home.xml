<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_blue"
    tools:context=".HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:orientation="horizontal"
        android:background="@color/light_blue"

        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"


            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="calendar icon"
                android:src="@drawable/icon_calender" />

            <TextView
                android:id="@+id/year_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023"
                android:layout_marginLeft="5dp"
                android:textColor="@color/feldgrau_green"
                android:textSize="6pt"

                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/you_saved_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You saved"
                android:textSize="10pt"

                android:textColor="@color/feldgrau_green"
                />

            <TextView
                android:id="@+id/annual_saved_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="@color/dark_brown"
                android:textSize="10pt"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_marginTop="140dp"
        android:divider="@color/very_light_blue"
      >

    </ListView>
</FrameLayout>